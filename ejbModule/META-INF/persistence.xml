<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="XYZ" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/OracleDS</jta-data-source>

		<class>com.dahafa.hais.Address</class>
		<class>com.dahafa.hais.AuthorizationRole</class>
		<class>com.dahafa.hais.BillOfMaterial</class>
		<class>com.dahafa.hais.BillOfMaterialID</class>
		<class>com.dahafa.hais.Building</class>
		<class>com.dahafa.hais.Diagnostics</class>
		<class>com.dahafa.hais.Disease</class>
		<class>com.dahafa.hais.Floor</class>
		<class>com.dahafa.hais.GeoLocation</class>
		<class>com.dahafa.hais.GeoLocationID</class>
		<class>com.dahafa.hais.HealthInsurance</class>
		<class>com.dahafa.hais.Hospital</class>
		<class>com.dahafa.hais.HospitalEmployee</class>
		<class>com.dahafa.hais.Material</class>
		<class>com.dahafa.hais.Patient</class>
		<class>com.dahafa.hais.Person</class>
		<class>com.dahafa.hais.PersonHealthInsurance</class>
		<class>com.dahafa.hais.PersonHealthInsuranceID</class>
		<class>com.dahafa.hais.Room</class>
		<class>com.dahafa.hais.Stay</class>
		<class>com.dahafa.hais.Treatment</class>
		<class>com.dahafa.hais.TreatmentSchedule</class>
		<class>com.dahafa.hais.TreatmentScheduleID</class>
		<class>com.dahafa.hais.TreatmentType</class>

		<properties>
			<property name="hibernate.hbm2ddl.auto" value="none" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>

